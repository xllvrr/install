    ecryptfs-utils \
    epson-inkjet-printer-escpr \
    epson-inkjet-printer-escpr2 \
    fcitx \
    fcitx-configtool \
    fcitx-googlepinyin \
    fcitx-qt4 \
    gcc-fortran \
    gradle \
    libtool \
    networkmanager-openvpn \
    numlockx \
    patchutils \
    pdftk \
    poppler-data \
    powertop \
    ps-utils \
    s-nail \
    tlp \
    vulkan-intel \
    vulkan-radeon \
    xorg \
    xdg-su \
    xdg-utils \
    yarn \

# tools
