    bluez-utils \
    bzip2 \
    cpupower \
    f2fs-tools \
    flatpak \
    hyphen-en \
    inxi \
    iputils \
    memtest86+ \
    mkinitcpio-openswap \
    netpbm \
    ntp \
    udiskie \
    xclip \
    xfsprogs \
    xorg-twm \
    xtitle \
    wmctrl \

# hardware
